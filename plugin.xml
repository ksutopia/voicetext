<?xml version="1.0" encoding="UTF-8"?>
 
<plugin xmlns="http://www.phonegap.com/ns/plugins/1.0"
          id="com.phonegap.plugins.speech" version="1.0.0">
    <name>P201SpeechToText</name>
    <description>Plugin to convert speech to text in background</description>
    <license>MIT</license>
    <keywords>phonegap,speechtotext</keywords>
 
 
    <js-module src="P201SpeechToText.js" name="SpeechToText">
        <clobbers target="plugins.speechtotext" />
    </js-module>
 
    <!-- android -->
    <platform name="android">
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="P201SpeechToText">
                <param name="android-package" value="com.ksutopia.bbtalks"/>
            </feature>
        </config-file>
 
        <source-file src="P201SpeechToText.java" target-dir="src/com/ksutopia/bbtalks" />      
        <source-file src="P202LanguageDetailsChecker.java" target-dir="src/com/ksutopia/bbtalks" />      
     </platform>          
</plugin>
